<div class="event_contents">
	<p id="notice"><%= notice %></p>
	<p>
	  <b>시작일</b>
	  <%= time_mid @event.started_at %>
	</p>
	<p>
	  <b>종료일</b>
	  <%= time_mid @event.finished_at %>
	</p>
	<p>
	  <b>이벤트명:</b>
	  <%= @event.title %>
	</p>
	<p>
	  <b>진행상태:</b>
	  <%= @event.status %>
	</p>
	<p>
		<% if @event.image_url.empty? %>
			<%= image_tag @event.image_url %>
		<% else %>
			<span>등록된 이미지가 없습니다.</span>
		<% end %>
	</p>
	<%= link_to '전체 이벤트 목록', events_path %>
	<div id="livereContainer" >
		<script type="text/javascript">
			var consumer_seq	= "604"
			var livere_seq		= "14645"
			var smartlogin_seq	= "688"	// 고정
			var title = "repang";
			var refer = "repang.net/events/<%= @event.id %>";
			livereReply = new Livere( livere_seq , refer , title );
			livereLib.start();
		</script>
	</div>
	<div id="modal_form">
		<%= form_for(@user) do |f| %>
		  <% if @event.errors.any? %>
		    <div id="error_explanation">
		      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

		      <ul>
		      <% @event.errors.full_messages.each do |msg| %>
		        <li><%= msg %></li>
		      <% end %>
		      </ul>
		    </div>
		  <% end %>

		  <div class="field">
		    <%= f.label :username, "사용자이름" %><br />
		    <%= f.input :username %>
		  </div>
		  <div class="actions">
		    <%= f.submit %>
		  </div>
		<% end %>
	</div>
</div>