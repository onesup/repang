<div class="event_contents">
	<p id="notice"><%= notice %></p>
	<p>
	  <b>시작일</b>
	  <%= time_mid @event.started_at %>
	</p>
	<p>
	  <b>종료일</b>
	  <%= time_mid @event.finished_at %>
	</p>
	<p>
	  <b>이벤트명:</b>
	  <%= @event.title %>
	</p>
	<p>
	  <b>진행상태:</b>
	  <%= @event.status %>
	</p>
	<p>
		<% unless @event.image_url.empty? %>
			<%= image_tag @event.image_url %>
		<% else %>
			<span>등록된 이미지가 없습니다.</span>
		<% end %>
	</p>
	<%= link_to '전체 이벤트 목록', events_path %>
	<a href="#" class="register_button"> Open modal by getting the dom id from href</a>
	<div id="livereContainer" >
		<script type="text/javascript">
			var consumer_seq	= "604"
			var livere_seq		= "14645"
			var smartlogin_seq	= "688"	// 고정
			var title = "repang";
			var refer = "repang.net/events/<%= @event.id %>";
			livereReply = new Livere( livere_seq , refer , title );
			livereLib.start();
		</script>
	</div>
	<div id="register_form">
		<%= simple_form_for(@user, :html => {:class => 'form-horizontal' }) do |f| %>
		  <% if @user.errors.any? %>
		    <div id="error_explanation">
		      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this event from being saved:</h2>

		      <ul>
		      <% @user.errors.full_messages.each do |msg| %>
		        <li><%= msg %></li>
		      <% end %>
		      </ul>
		    </div>
		  <% end %>
			<%= f.association :events, :as => :hidden, input_html: {:value => @event.id} %>
		  <div class="field">
		    <%= f.label :name, "이름" %><br />
		    <%= f.input :name %>
		  </div>
		  <div class="field">
		    <%= f.label :email, "이메일" %><br />
		    <%= f.input :email %>
		  </div>
		  <div class="field">
		    <%= f.label :phone, "전화" %><br />
		    <%= f.input :phone %>
		  </div>
			
		  <div class="actions">
		    <%= f.submit %>
		  </div>
		<% end %>
	</div>
</div>